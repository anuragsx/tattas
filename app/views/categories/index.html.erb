<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Manage Categories
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>S. No.</th>
                            <th>Category Name</th>
                            <th>Desc</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @categories.each_with_index do |category, index| %>
                      <tr>
                        <td><%= index + 1 %></td>
                        <td><%= category.name %></td>
                        <td><%= category.desc %></td>
                        <td>
                          <%= link_to '<button type="button" class="btn btn-success">Add Images</button>'.html_safe, new_gallary_category_path(category) %>                        
                          <%= link_to '<button type="button" class="btn btn-primary">Edit</button>'.html_safe, edit_category_path(category) %>
                          <%= link_to '<button type="button" class="btn btn-primary">View Gallary</button>'.html_safe, category_gallaries_path(category) %>
                          <%= link_to '<button type="button" class="btn btn-danger">Delete</button>'.html_safe, category, method: :delete, data: { confirm: 'Are you sure?' } %>
                        </td>
                      </tr>
                    <% end %>
                    </tbody>
                </table>

                <%= link_to '<button type="button" class="btn btn-primary">Add New Service</button>'.html_safe, new_category_path %>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
