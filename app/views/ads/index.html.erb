<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Manage Ads
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
            <p id="notice"><%= notice %></p>

                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>S. No.</th>
                            <th>Title</th>
                            <th>Height</th>
                            <th>Weight</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @ads.each_with_index do |ad, index| %>
                      <tr>
                        <td><%= index + 1 %></td>
                        <td><%= ad.title %></td>
                        <td><%= ad.height %></td>
                        <td><%= ad.weight %></td>
                        <td>                        
                          <%= link_to '<button type="button" class="btn btn-primary">Edit</button>'.html_safe, edit_ad_path(ad) %>
                          <%= link_to '<button type="button" class="btn btn-danger">Delete</button>'.html_safe, ad, method: :delete, data: { confirm: 'Are you sure?' } %>
                        </td>
                      </tr>
                    <% end %>
                    </tbody>
                </table>

                <%= link_to '<button type="button" class="btn btn-primary">Add New Ad</button>'.html_safe, new_ad_path %>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
