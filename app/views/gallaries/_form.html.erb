<%= form_for @picture, url: update_gallary_category_gallary_path(@category), method: :get, html: { class: 'form-horizontal'} do |f| %>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-actions">
    <br />
    <%= f.submit 'Update', class: 'btn btn-primary' %>
    <%#= link_to t('.cancel', default: t("helpers.links.cancel")),
                category_gallaries_path(@category, @picture), class: 'btn btn-mini' %>
  </div>
<% end %>