<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Image Gallary - <%= @category.name%>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>S. No.</th>
                            <th>Image</th>
                            <th>Desc</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @pictures.each_with_index do |picture, index| %>
                      <tr>
                        <td class="col-md-1"><%= index + 1 %></td>
                        <td class="col-md-4"><%= image_tag picture.image.url(:thumb), width: '350', height: '220' %></td>
                        <td class="col-md-5"><%= picture.description %></td>
                        <td class="col-md-2">
                          <%= link_to '<button type="button" class="btn btn-primary">Edit Description</button>'.html_safe, edit_category_gallary_path(@category, picture) %>
                          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                          <%= link_to '<button type="button" class="btn btn-danger">Delete</button>'.html_safe, destory_picture_category_gallary_path(@category, picture), method: :delete %>
                        </td>
                      </tr>
                    <% end %>
                    </tbody>
                </table>

                <%#= link_to '<button type="button" class="btn btn-primary">Add New Service</button>'.html_safe, new_category_path %>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
